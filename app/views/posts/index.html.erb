<h1>My Pretty Sweet Blog</h1>


<div class="content">
  <div class="new-post">
    <%= link_to 'Write a new post', new_post_path %>
  </div>

  <% @posts.each do |post| %>
  <div class="post">
    <div class="post-title"><%= link_to post.title, post %></div>
    <div class="post-content"><%= simple_format(post.content) %></div>
  </div><% end %>

</div>